<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_colorTag"
        android:background="#000"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/route_name"
        android:layout_alignBottom="@id/route_name"
        android:layout_width="@dimen/colorTag_width"
        android:layout_height="0dp"/>

    <CheckBox
        android:id="@+id/route_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/colorTag_width"
        android:fontFamily="sans-serif-light"
        tools:text="Linda Vista #21" />

    <View
        android:layout_marginStart="@dimen/colorTag_width"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_divider"
        />

</RelativeLayout>