<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    >

    <ImageView
        android:visibility="visible"
        android:id="@+id/imageview_gps"
        android:src="@drawable/ic_gps"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:tint="@color/icon_tint"/>

    <TextView android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textAlignment="viewStart"
        android:layout_toEndOf="@id/imageview_gps"
        tools:text="Ignacio Manuel Altamirano"
        />

    <TextView android:id="@android:id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        android:layout_alignStart="@android:id/text1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="viewStart"
        tools:text="Linda Vista, Uruapan, MichoacÃ¡n"
        />

    <TextView
        android:visibility="visible"
        android:id="@+id/textview_google"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by Google"/>

</RelativeLayout>





